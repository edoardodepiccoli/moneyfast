<%= turbo_stream_from current_user, :transactions %>
<%= turbo_stream_from current_user, :cashflow_summary %>

<div class="d-flex flex-column">
  <div>
    <%= render "transactions/cashflow_summary", user: current_user %>
  </div>

  <div>
    <%= render "transactions/form", new_transaction: @new_transaction %>
  </div>

  <div id="transactions_list" class="d-flex flex-column">
    <%= render @transactions %>
  </div>

  <% if @total_count > 10 %>
    <div class="d-flex justify-content-center">
      <%= link_to "View All Transactions (#{@total_count} total)", transactions_path, class: "btn btn-outline-primary btn-sm" %>
    </div>
  <% end %>
</div>