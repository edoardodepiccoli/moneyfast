<div class="card border-primary mb-3">
  <div class="card-body">
    <h5 class="card-title text-primary mb-3">Add New Transaction</h5>
    <div data-controller="form-reset">
      <%= form_with model: new_transaction, data: { action: "turbo:submit-end->form-reset#clear" } do |f| %>
        <div class="mb-3">
          <%= f.text_field :raw_input, 
              placeholder: "e.g. spent 2 euros for coffee", 
              class: "form-control",
              autocomplete: "off" %>
        </div>
        <%= f.submit "Add Transaction", class: "btn btn-primary w-100" %>
      <% end %>
    </div>
  </div>
</div>

