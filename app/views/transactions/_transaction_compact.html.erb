<%= turbo_frame_tag dom_id(transaction) do %>
  <% 
    is_scheduled = transaction.processed? && transaction.date > Date.today
  %>
  <div>
    <% if transaction.pending? %>
      <div class="d-flex align-items-center gap-2 border-bottom py-2 px-3">
        <div class="spinner-border spinner-border-sm text-warning" role="status">
          <span class="visually-hidden">Loading...</span>
        </div>
        <p class="text-muted small fst-italic mb-0">
          Processing: "<%= transaction.raw_input %>"...
        </p>
      </div>
    <% else %>
      <div class="d-flex align-items-center gap-3 border-bottom py-2 px-3 <%= is_scheduled ? 'bg-warning bg-opacity-25' : '' %>">
        <div class="flex-shrink-0" style="width: 90px;">
          <div class="small fw-semibold <%= transaction.amount < 0 ? 'text-danger' : 'text-success' %>">
            <%= number_to_currency(transaction.amount, unit: "â‚¬") %>
          </div>
          <div class="text-muted" style="font-size: 0.7rem;">
            <%= transaction.date.strftime("%-d %b %Y") %>
          </div>
        </div>
        <div class="flex-grow-1 min-w-0">
          <p class="small mb-0 text-break">
            <span class="text-muted"><%= transaction.category %></span>: <%= transaction.description %>
          </p>
        </div>
        <div class="flex-shrink-0">
          <%= button_to transaction_path(transaction), 
              method: :delete, 
              class: "btn btn-sm btn-danger rounded-circle p-1 d-flex align-items-center justify-content-center",
              style: "width: 24px; height: 24px;",
              title: "Delete transaction" do %>
            <i class="bi bi-x" style="font-size: 0.7rem;"></i>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>

