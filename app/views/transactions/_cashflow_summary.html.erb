<% 
  summary = CashflowCalculationService.new(user).summary
  total_net_worth = summary[:total_net_worth]
  future_expenses = summary[:future_expenses]
  future_income = summary[:future_income]
  usable_net_worth = summary[:usable_net_worth]
  future_transactions_count = summary[:future_transactions_count]
%>

<%= turbo_frame_tag "cashflow_card" do %>
<div class="card bg-light border mb-3">
  <div class="card-body">
    <h5 class="card-title mb-3">Net Worth</h5>
    
    <div class="d-flex flex-column gap-3">
      <!-- Usable Net Worth (Primary Display) -->
      <div>
        <div class="d-flex align-items-baseline gap-2 mb-1">
          <span class="display-6 fw-bold <%= usable_net_worth >= 0 ? 'text-success' : 'text-danger' %>">
            <%= number_to_currency(usable_net_worth, unit: "€") %>
          </span>
        </div>
        <p class="text-muted small mb-0">Usable Net Worth</p>
      </div>
      
      <!-- Breakdown -->
      <div class="border-top pt-3">
        <div class="d-flex justify-content-between align-items-center mb-2">
          <span class="small">Total Net Worth</span>
          <span class="small fw-semibold <%= total_net_worth >= 0 ? 'text-success' : 'text-danger' %>">
            <%= number_to_currency(total_net_worth, unit: "€") %>
          </span>
        </div>
        
        <% if future_transactions_count > 0 %>
          <% if future_expenses < 0 %>
            <div class="d-flex justify-content-between align-items-center mb-2">
              <span class="small">Future Expenses</span>
              <span class="small fw-semibold text-danger">
                <%= number_to_currency(future_expenses, unit: "€") %>
              </span>
            </div>
          <% end %>
          <% if future_income > 0 %>
            <div class="d-flex justify-content-between align-items-center mb-2">
              <span class="small">Future Income</span>
              <span class="small fw-semibold text-success">
                +<%= number_to_currency(future_income, unit: "€") %>
              </span>
            </div>
          <% end %>
          <div class="text-muted" style="font-size: 0.7rem;">
            <%= pluralize(future_transactions_count, 'transaction') %> scheduled
          </div>
        <% else %>
          <div class="text-muted" style="font-size: 0.7rem;">
            No future transactions
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<% end %>

