<%= turbo_frame_tag dom_id(transaction) do %>
  <% 
    is_scheduled = transaction.processed? && transaction.date > Date.today
    card_classes = if transaction.pending?
      'bg-warning bg-opacity-10 border-warning'
    elsif is_scheduled
      'bg-warning bg-opacity-20 border-warning'
    else
      'bg-light border-secondary'
    end
  %>
  <div class="card <%= card_classes %> mb-2">
    <div class="card-body p-3">
      <% if transaction.pending? %>
        <div class="d-flex align-items-center gap-2">
          <div class="spinner-border spinner-border-sm text-warning" role="status">
            <span class="visually-hidden">Loading...</span>
          </div>
          <div class="flex-grow-1">
            <p class="text-muted small fst-italic mb-0">
              Processing: "<%= transaction.raw_input %>"...
            </p>
          </div>
        </div>
      <% else %>
        <div class="d-flex align-items-start justify-content-between gap-3">
          <div class="flex-grow-1 min-w-0">
            <div class="d-flex align-items-center gap-2 mb-1">
              <span class="fs-4 fw-bold <%= transaction.amount < 0 ? 'text-danger' : 'text-success' %>">
                <%= number_to_currency(transaction.amount, unit: "â‚¬") %>
              </span>
            </div>
            <p class="small fw-medium mb-1">
              <span class="badge bg-secondary bg-opacity-25 text-dark me-1"><%= transaction.category %></span>
              <%= transaction.description %>
            </p>
            <p class="text-muted small mb-0">
              <%= transaction.date.strftime("%A %-d %B %Y") %>
            </p>
          </div>
          <div class="flex-shrink-0">
            <%= button_to transaction_path(transaction), 
                method: :delete, 
                class: "btn btn-sm btn-danger rounded-circle p-1 d-flex align-items-center justify-content-center",
                style: "width: 28px; height: 28px;",
                title: "Delete transaction" do %>
              <i class="bi bi-x-lg"></i>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>