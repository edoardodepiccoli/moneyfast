<%= turbo_frame_tag dom_id(transaction) do %>
  <div class="transaction-row <%= 'opacity-50 italic' if transaction.pending? %>">
    <% if transaction.pending? %>
      <span>Processing: "<%= transaction.raw_input %>"...</span>
    <% else %>
      <strong><%= number_to_currency(transaction.amount, unit: "â‚¬") %></strong>
      <span><%= transaction.description %></span>
      <span><%= transaction.date %></span>
      <%= button_to "Delete", transaction_path(transaction), method: :delete %>
    <% end %>
  </div>
<% end %>