<div class="container px-4 py-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6 col-lg-5">
      <h2 class="h3 mb-2">Log in</h2>
      <p class="text-muted mb-4">Welcome back! Let's manage your money together.</p>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :password, class: "form-label" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="d-none">
            <%= f.check_box :remember_me, checked: true %>
          </div>
        <% end %>

        <div class="mb-3">
          <%= f.submit "Log in", class: "btn btn-primary w-100" %>
        </div>
      <% end %>

      <hr class="my-4">
      <p class="text-start mb-0">
        Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name), class: "text-primary text-decoration-none" %>
      </p>
    </div>
  </div>
</div>
