<div class="mx-auto max-w-md mt-8 px-4">
  <h2 class="text-2xl mb-2">Log in</h2>
  <p class="text-base-content/70 mb-6">Welcome back! Let's manage your money together.</p>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-control w-full mb-4">
      <%= f.label :email, class: "label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full" %>
    </div>

    <div class="form-control w-full mb-4">
      <%= f.label :password, class: "label" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "input input-bordered w-full" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="hidden">
        <%= f.check_box :remember_me, checked: true %>
      </div>
    <% end %>

    <div class="form-control mt-6">
      <%= f.submit "Log in", class: "btn btn-primary w-full" %>
    </div>
  <% end %>

  <div class="divider"></div>
  <p class="text-left">
    Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name), class: "link link-primary" %>
  </p>
</div>
